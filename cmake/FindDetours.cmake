IF(WIN32)
    MESSAGE(STATUS "Finding Detours...")
    FIND_PATH(DETOURS_INCLUDE_DIR detours.h "${DETOURS_ROOT}/include")
    FIND_PATH(DETOURS_LIBRARY_DIR detours.lib "${DETOURS_ROOT}/lib")
ENDIF (WIN32)

IF(DETOURS_INCLUDE_DIR AND DETOURS_LIBRARY_DIR)
    SET(DETOURS_FOUND TRUE)
    SET(DETOURS_LIBRARIES "${DETOURS_LIBRARY_DIR}/detours.lib")
ENDIF()

IF(DETOURS_FOUND)
    MESSAGE(STATUS "Detours found")
ELSE()
    MESSAGE(FATAL_ERROR "Could not find Detours")
ENDIF()
